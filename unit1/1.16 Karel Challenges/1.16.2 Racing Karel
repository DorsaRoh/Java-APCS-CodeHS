//Racing Karel

public class RacingKarel extends SuperKarel
{
    public void run()
    {
        
        for(int i=0;i<32;i++)
        {
            karelRun();
        
            if(frontIsBlocked())
            {
                putBall();
                turnLeft();
                move();
            }
            
            endPosition();
        
        }
        
    }
    
    private void endPosition()
    {
        turnAround();
        move();
        turnAround();
    }
    
    private void karelRun()
    {
        while(frontIsClear())
        {
            move();
        }
    }
}
