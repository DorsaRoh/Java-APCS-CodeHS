// Double Tennis Balls Karel

public class DoubleTennisBallsKarel extends SuperKarel
{
    public void run()
    {
        move();
        
        firstStack();
        
        transition();
        
        secondStack();
        
        endPosition();
        
    }
    
    private void firstStack()
    {
        while(ballsPresent())
        {
            takeBall();
            move();
            putBall();
            putBall();
            
            turnAround();
            move();
            turnAround();
        }
    }
    
    private void transition()
    {
        move();
        move();
        turnAround();
        move();
    }
    
    private void secondStack()
    {
        while(ballsPresent())
        {
            takeBall();
            move();
            putBall();
            
            turnAround();
            move();
            turnAround();
        }
    }
    
    private void endPosition()
    {
        move();
        move();
        turnAround();
    }
}
